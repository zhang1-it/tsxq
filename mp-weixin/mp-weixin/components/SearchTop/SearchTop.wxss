.search-container {
  position: relative;
}
.search-input-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 20rpx 0 0 0;
}
.search-input-container .search-input {
  margin: 0 20rpx;
}
.search-suggestion-container {
  background-color: #fff;
  width: 100%;
  position: absolute;
  z-index: 999;
  padding: 20rpx 0 10rpx 0;
}
.search-suggestion-container .search-suggestions-item {
  padding: 10rpx 30rpx;
}
.search-suggestion-container .search-suggestions-item .search-suggest-text {
  padding: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
}
.search-history-container {
  min-height: 100rpx;
  width: 100%;
}
.search-history-container .search-history-item-container {
  margin: 20rpx;
}
.search-history-container .search-history-item-container .search-history-item {
  margin: 10rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
}